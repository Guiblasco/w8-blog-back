{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["xo", "prettier"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/naming-convention": "error",
        "@typescript-eslint/consistent-type-definitions": ["error", "interface"]
      },
      "excludedFiles": ["**/model/*.ts"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": { "new-cap": ["error", { "capIsNewExceptions": ["Router"] }] }
}
